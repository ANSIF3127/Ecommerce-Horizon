     // JavaScript code to handle button clicks and style changes
     document.addEventListener("DOMContentLoaded", function () {
    const wishlistButton = document.querySelector('.btn.btn-outline-success.fw-500.rounded:nth-child(2)');
    const cartButton = document.querySelector('.btn.btn-outline-success.fw-500.rounded:nth-child(3)');

    wishlistButton.addEventListener('click', function () {
      wishlistButton.classList.add('wishlist-active');
      cartButton.classList.remove('cart-active');
    });

    cartButton.addEventListener('click', function () {
      cartButton.classList.add('cart-active');
      wishlistButton.classList.remove('wishlist-active');
    });
  });
