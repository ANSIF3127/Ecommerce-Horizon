.toggle-dark-theme button {
    width: 70px;
    background-color: #ccc;
    border-radius: 20px;
    border: none;
    position: relative;
    padding: 4px;
    cursor: pointer;
}

.toggle-dark-theme .icon {
    width: 26px;
    height: 26px;
    border-radius: 50%;
    background-color: #32006a;
    position: relative;
    transition: all 0.5s ease;
}

.toggle-dark-theme .icon::before {
    font-family: "Font Awesome 6 Free";
    font-weight: 400;
    content: "\f186";
    position: absolute;
    color: #f5ecec;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.5s ease;
}

