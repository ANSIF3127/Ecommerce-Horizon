            margin-left: 20px;
        }
        body, h1, h2, p, table {
    margin: 0;
    padding: 0;
}

/* Apply a simple border-collapse to the table */
.table-container table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

/* Style table headers */
.table-container th {
    background-color: #f2f2f2;
    padding: 10px;
    text-align: left;
    font-weight: bold;
}

/* Style table data cells */
.table-container td {
    border: 1px solid #ddd;
    padding: 10px;
}

/* Highlight the table rows on hover */
.table-container tbody tr:hover {
    background-color: #f5f5f5;
}

/* Responsive design considerations */

/* Make the table responsive */
@media screen and (max-width: 600px) {
    .table-container table {
        overflow-x: auto;
    }
}

/* Stack the table headers on smaller screens */
@media screen and (max-width: 400px) {
    .table-container th {
        display: block;
    }
    .table-container td {
        display: block;
        text-align: left;
    }
    .table-container th, .table-container td {
        width: 100%;
        box-sizing: border-box;
    }
}
.cancel-btn {
        background-color: #e43119; /* Green color */
        color: #fff;
        border: none;
        border-radius: 5px; /* Curved corners */
        padding: 10px 20px;
        cursor: pointer;
    }

    /* Hover effect for the "Update" button */
    .cancel-btn:hover {
        background-color: #e92e11; /* Darker green on hover */
    }
        
    </style>
     <%- include('nav') %>
