<body>
   
    <header>
        <h1>User Order</h1>
    </header>
    <div class="container">
     
        <div class="row">
            <div class="col-md-3">
               
            </div>
            <div class="table-container">
               
                <table>
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Total Prices</th>
                            <th>Order Date</th>
                            <th>Status</th>
                            <th>Payment Method</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                  
                    <tbody>
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach((order, index) => { %>
                                <% order.productcollection.forEach((product, productIndex) => { %>
                                    <tr>
                                        <td data-label="Product Name"><%= product.productName %></td>
                                        <td data-label="Quantity"><%= product.quantity %></td>
                                        <td data-label="Total Prices">â‚¹<%= product.price * product.quantity %></td>
                                        <td data-label="Order Date"><%= order.orderDate %></td>
                                        <td data-label="Status"><%= product.status %></td>
                                        <td data-label="Payment Method"><%= order.paymentMethod %></td>
                                        <td data-label="Action">
                                            <% if (product.status !== 'Cancelled' && product.status !== 'Delivered') { %>
                                                <a href="/cancel/<%= order.userid %>/<%= product._id %>" id="cancel" class="cancel-btn">Cancel</a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8">No orders found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
              
            </div>
           
        </div>
    </div>

