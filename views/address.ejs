<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css"> <!-- Add your custom styles here -->
 <!-- SweetAlert CSS -->
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e6f7ff; /* Light Blue */
        }

        header {
            background-image: linear-gradient(90deg, #020024 0%, #090979 35%, #00d4ff 100%);
            color: #fff;
            text-align: center;
            padding: 10px 0;
        }

        .container {
            margin-top: 20px;
        }

        .address-card {
            border: 1px solid #b3d9ff; /* Lighter Blue */
            border-radius: 10px;
            margin-bottom: 20px;
            padding: 20px;
            background-color: #ffffff; /* White */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .address-card h5 {
            color: #005580; /* Darker Blue */
            margin-bottom: 10px;
        }

        .address-details p {
            margin: 5px 0;
        }

        .btn-action {
            margin-top: 10px;
        }

        /* Different button styling */
        .btn-info,
        .btn-danger {
            background-color: #005580;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            text-decoration: none;
        }

        .btn-info:hover,
        .btn-danger:hover {
            background-color: #003366;
        }

        /* Add style for the top-left aligned button */
        .add-address-btn {
            margin-top: 20px;
            margin-bottom: 20px;
            margin-left: 20px;
        }
        
    </style>
     <%- include('nav') %>
</head>

<body>
   
    <header>
        <h1>User Profile</h1>
    </header>
    <div class="container">
     
        <div class="row">
            <div class="col-md-3">
                <%-include('usernavbar')%>
            </div>

            <div class="col-md-9">
                <!-- Align the "Add Address" button to the left side at the top -->
                <div class="text-left add-address-btn">
                    <a href="/addAddress" class="btn btn-info rounded-pill">Add Address</a>
                </div>

                <div id="addressContainer" class="row">
                    <!-- Assuming 'addresses' is an array containing address data -->
                    <% userProfileData.forEach((data, index)=> { %>
                    <div class="col-md-6">
                        <div class="address-card">
                            <h5><%= data.firstname %><%= data.lastname %></h5>

                            <div class="address-details">
                                <p><span class="text-info">Address:</span> <%= data.address %>, <%= data.city %></p>
                                <p><%= data.state %> <%= data.pincode %></p>
                                <p class="phone-number"><span class="text-info">Phone:</span> <%= data.phone %></p>
                            </div>

                            <div class="btn-action">
                                <a href="/addressedit/<%= data._id %>" class="btn btn-info rounded-pill">Edit</a>
                                <a id="deleteaddress" href="/deleteaddress/<%= data._id %>" class="btn btn-danger delete-button" data-deleteaddress-id="<%= data._id %>">Delete</a>
                                
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(addressId) {
            var confirmation = confirm("Are you sure you want to delete this address?");

            if (confirmation) {
                // If user clicks OK in the confirmation dialog, redirect to the delete URL
                window.location.href = "/profile/addressDelete/" + addressId;
            } else {
                // If user clicks Cancel in the confirmation dialog, do nothing
                // You can add additional handling or simply leave this empty
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
            <!-- sweet alert-->
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
     <script>
        ////////////////////////alert message ////////////////////////
      document.addEventListener("DOMContentLoaded", function () {
          const deleteButtons = document.querySelectorAll(".delete-button");
      
          deleteButtons.forEach(button => {
              button.addEventListener("click", function (e) {
                  e.preventDefault();
      
                  const addressId = this.getAttribute("data-deleteaddress-id");
      
                  Swal.fire({
                      title: "Are you sure?",
                      text: "Do you really want to Delete Address?",
                      icon: "question",
                      showCancelButton: true,
                      confirmButtonText: "Yes, delete",
                      cancelButtonText: "No, cancel"
                  }).then((result) => {
                      if (result.isConfirmed) {
                          // If the user confirms, redirect to the delete product page
                          window.location.href = "/deleteaddress/" + addressId;
                      }
                  });
              });
          });
      });
      
      </script> 
</body>

</html>
